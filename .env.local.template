# Database Configuration
MONGO_USERNAME=root
MONGO_PASSWORD=example
MONGO_DB_NAME=finance_management
# Valid for local development with the bundled MongoDB container
MONGO_URI=mongodb://:@finance-management-db:27017/?authSource=admin

# General
NODE_ENV=development
API_PORT=5000
WEB_PORT=3000

# Auth Secrets (replace with persistent rand hex in real env)
ACCESS_TOKEN_SECRET=local_access_secret_do_not_use_in_prod
REFRESH_TOKEN_SECRET=local_refresh_secret_do_not_use_in_prod
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
NEXTAUTH_SECRET=local_nextauth_secret_do_not_use_in_prod
AUTH_KEY_SALT=local_salt_do_not_use_in_prod

# Redis
REDIS_URL=redis://finance-management-redis:6379
AUTH_REDIS_PREFIX=auth:local
PDF_QUEUE_REDIS_URL=redis://finance-management-redis:6379
PDF_QUEUE_NAME=summary-pdf

# Frontend
NEXT_PUBLIC_PASSWORD_RESET_REDIRECT_URL=http://finance.localhost/reset-password
NEXTAUTH_URL=http://finance.localhost
AUTH_BACKEND_URL=http://finance-management-api:5000
AUTH_REFRESH_PATH=/api/users/refresh-token

# Timeouts
PROXY_TIMEOUT_MS=15000
PASSWORD_RESET_TIMEOUT_MS=15000
REGISTER_TIMEOUT_MS=15000
REDIS_CONNECT_TIMEOUT_MS=10000
PDF_JOB_RESPONSE_TIMEOUT_MS=45000
PDF_JOB_PROCESS_TIMEOUT_MS=120000

# Email (Mailhog or similar for dev)
EMAIL_PROVIDER=smtp
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=user@example.com
EMAIL_PASS=password
EMAIL_FROM=noreply@example.com
EMAIL_SECURE=false
EMAIL_TLS_REJECT_UNAUTHORIZED=false

# CORS
CORS_ALLOWED_ORIGINS=http://finance.localhost

# Uploads
UPLOADS_ROOT=/app/uploads
UPLOAD_MAX_BYTES=5242880
UPLOAD_MAX_DIMENSION=1600
PROFILE_IMAGE_MAX_DIMENSION=512

# Backup Configuration
RESTIC_PASSWORD="dev_password"
RESTIC_REPOSITORY="/repo"
BACKUP_CRON_SCHEDULE="0 3 * * *"

# Restore Configuration (Optional)
# RESTORE_SOURCE_DB=finance_management
# RESTORE_TARGET_DB=finance_management
