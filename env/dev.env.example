# Shared Compose variables for local development
WEB_PORT=3000
API_PORT=5000
NODE_ENV=development
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Database configuration
MONGO_USERNAME=finance_app
MONGO_PASSWORD=finance_app_password
MONGO_DATABASE=finance
MONGO_URI=mongodb://finance_app:finance_app_password@finance-management-db:27017/finance?authSource=admin

# API secrets
ACCESS_TOKEN_SECRET=dev-access-secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=dev-refresh-secret
REFRESH_TOKEN_EXPIRY=7d
OTP_EXPIRY_MINUTES=10
ADMIN_RECENT_LOGIN_LIMIT=5
DEFAULT_PASSWORD_RESET_REDIRECT=http://localhost:3000/reset-password
SUBSCRIPTION_JOB_LOCK_TTL_MS=900000
JOB_INSTANCE_ID=finance-management-worker-dev

# Mail delivery (use a local mailhog instance by default)
EMAIL_PROVIDER=smtp
EMAIL_SERVICE=
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASS=
EMAIL_API_KEY=
EMAIL_API_USER=
EMAIL_FROM="Finance Management (Dev)" <no-reply@localhost>
EMAIL_SECURE=false
EMAIL_REQUIRE_TLS=false
EMAIL_TLS_REJECT_UNAUTHORIZED=false
EMAIL_TLS_MIN_VERSION=
EMAIL_TLS_CIPHERS=

# Frontend + auth coordination
AUTH_BACKEND_URL=http://finance-management-api:5000
AUTH_REFRESH_PATH=/api/users/refresh-token
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret
NEXT_PUBLIC_PASSWORD_RESET_REDIRECT_URL=http://localhost:3000/reset-password
AUTH_REDIS_PREFIX=auth:dev
AUTH_KEY_SALT=dev-auth-salt
REDIS_URL=redis://finance-management-redis:6379
REDIS_CONNECT_TIMEOUT_MS=10000
PROXY_TIMEOUT_MS=15000
PASSWORD_RESET_TIMEOUT_MS=15000
REGISTER_TIMEOUT_MS=15000
BASE_URL=http://localhost:3000
