NODE_ENV=test
PORT=5000

MONGO_DB_NAME=finance_e2e
MONGO_USERNAME=finance_e2e
MONGO_PASSWORD=finance_e2e_password
MONGO_URI=mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@localhost:27017/${MONGO_DB_NAME}?authSource=admin
MONGO_CONNECT_MAX_RETRIES=5
MONGO_CONNECT_RETRY_DELAY_MS=5000

REDIS_URL=redis://localhost:6379
PDF_QUEUE_REDIS_URL=redis://localhost:6379
