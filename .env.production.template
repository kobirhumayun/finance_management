# Database Configuration
MONGO_USERNAME=root
MONGO_PASSWORD=change_this_to_secure_password
MONGO_DB_NAME=finance_management
# Valid for production check if using local container, otherwise update host
MONGO_URI=mongodb://:@finance-management-db:27017/?authSource=admin

# General
NODE_ENV=production
API_PORT=5000
WEB_PORT=3000

# Auth Secrets (Must be set to strong random values)
ACCESS_TOKEN_SECRET=change_me_to_strong_access_secret
REFRESH_TOKEN_SECRET=change_me_to_strong_refresh_secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
NEXTAUTH_SECRET=change_me_to_strong_nextauth_secret
AUTH_KEY_SALT=change_me_to_strong_salt

# Redis
REDIS_URL=redis://finance-management-redis:6379
AUTH_REDIS_PREFIX=auth:prod
PDF_QUEUE_REDIS_URL=redis://finance-management-redis:6379
PDF_QUEUE_NAME=summary-pdf

# Frontend
NEXT_PUBLIC_PASSWORD_RESET_REDIRECT_URL=https://finance.example.com/reset-password
NEXTAUTH_URL=https://finance.example.com
AUTH_BACKEND_URL=http://finance-management-api:5000
AUTH_REFRESH_PATH=/api/users/refresh-token

# Timeouts
PROXY_TIMEOUT_MS=15000
PASSWORD_RESET_TIMEOUT_MS=15000
REGISTER_TIMEOUT_MS=15000
REDIS_CONNECT_TIMEOUT_MS=10000
PDF_JOB_RESPONSE_TIMEOUT_MS=45000
PDF_JOB_PROCESS_TIMEOUT_MS=120000

# Email (SMTP or Service)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=password
EMAIL_FROM=noreply@example.com
EMAIL_SECURE=true
# EMAIL_API_KEY=
# EMAIL_API_USER=
# EMAIL_SERVICE=

# CORS
CORS_ALLOWED_ORIGINS=https://finance.example.com

# Uploads
UPLOADS_ROOT=/app/uploads
UPLOAD_MAX_BYTES=5242880
UPLOAD_MAX_DIMENSION=1600
PROFILE_IMAGE_MAX_DIMENSION=512

# Backup Configuration
RESTIC_PASSWORD="change_this_to_a_very_secure_password"
RESTIC_REPOSITORY="/repo"
BACKUP_CRON_SCHEDULE="0 3 * * *"

# Restore Configuration (Optional)
# RESTORE_SOURCE_DB=finance_management
# RESTORE_TARGET_DB=finance_management
