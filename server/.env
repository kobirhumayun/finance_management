AUTH_REDIS_PREFIX=auth:v1:e2e

ACCESS_TOKEN_SECRET=development-access-token-secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=development-refresh-token-secret
REFRESH_TOKEN_EXPIRY=7d
OTP_EXPIRY_MINUTES=10
ADMIN_RECENT_LOGIN_LIMIT=5

EMAIL_PROVIDER=smtp
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test@example.com
EMAIL_PASS=testpass
EMAIL_FROM="Finance App E2E <noreply@example.com>"
EMAIL_SECURE=false
EMAIL_TLS_REJECT_UNAUTHORIZED=false
EMAIL_REQUIRE_TLS=false

CORS_ALLOWED_ORIGINS=http://localhost:3000
UPLOADS_ROOT=./uploads
UPLOAD_MAX_BYTES=5242880
UPLOAD_MAX_DIMENSION=1600
PROFILE_IMAGE_MAX_DIMENSION=512

PASSWORD_RESET_TIMEOUT_MS=15000
PROXY_TIMEOUT_MS=15000
REGISTER_TIMEOUT_MS=15000
DEFAULT_PASSWORD_RESET_REDIRECT=http://localhost:3000/reset-password
