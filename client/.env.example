# Frontend configuration
# Copy this file to `.env.local` and update the values for your environment.

# Base URLs
# URL of the backend API the frontend should call.
AUTH_BACKEND_URL=http://localhost:5000
# Path on the backend used to refresh authentication tokens.
AUTH_REFRESH_PATH=/api/users/refresh-token

# Authentication & session secrets
# Secret used by NextAuth for signing/encrypting tokens and cookies.
NEXTAUTH_SECRET=replace-with-a-secure-random-string
# Additional key salt used when hashing identifiers. Defaults to NEXTAUTH_SECRET when unset.
AUTH_KEY_SALT=

# Redis configuration (required for coordinating token refreshes in production)
REDIS_URL=redis://127.0.0.1:6379
# Timeout (ms) for establishing a Redis connection.
REDIS_CONNECT_TIMEOUT_MS=10000
# Prefix used for Redis keys written by the auth layer. Avoid trailing colons.
AUTH_REDIS_PREFIX=auth:v1

# API route timeouts (milliseconds)
REGISTER_TIMEOUT_MS=15000
PROXY_TIMEOUT_MS=15000
PASSWORD_RESET_TIMEOUT_MS=15000

# Public URLs
# HTTPS URL where password reset links should send users (must include protocol).
NEXT_PUBLIC_PASSWORD_RESET_REDIRECT_URL=https://your-app.com/reset-password
