# Application identity
APP_NAME=finance-management
APP_SUBDOMAIN=finance
BASE_DOMAIN=example.com

# Networking
INTERNAL_PORT=5000
NODE_ENV=production
PORT=5000
CORS_ALLOWED_ORIGINS=https://app.example.com

# Database credentials
MONGO_USERNAME=finance_app
MONGO_PASSWORD=finance_app_password
MONGO_DATABASE=finance
# Connection string used by the application container (matches docker-compose.yml)
MONGO_URI=mongodb://finance_app:finance_app_password@finance-management-db:27017/finance?authSource=admin

# Authentication tokens
ACCESS_TOKEN_SECRET=replace-with-strong-secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=replace-with-strong-refresh-secret
REFRESH_TOKEN_EXPIRY=7d

# Security and session settings
OTP_EXPIRY_MINUTES=10
ADMIN_RECENT_LOGIN_LIMIT=5
DEFAULT_PASSWORD_RESET_REDIRECT=https://app.example.com/reset-password
SUBSCRIPTION_JOB_LOCK_TTL_MS=900000
JOB_INSTANCE_ID=finance-management-worker-1

# Email delivery settings
EMAIL_PROVIDER=smtp
EMAIL_SERVICE=
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=replace-with-email-password
EMAIL_API_KEY=
EMAIL_API_USER=
EMAIL_FROM="Finance Management" <no-reply@example.com>
EMAIL_SECURE=false
EMAIL_REQUIRE_TLS=true
EMAIL_TLS_REJECT_UNAUTHORIZED=true
EMAIL_TLS_MIN_VERSION=TLSv1.2
EMAIL_TLS_CIPHERS=

# Central reverse proxy metadata (consumed by documentation/scripts)
BASE_URL=https://finance.example.com
