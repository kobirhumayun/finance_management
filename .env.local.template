# Copy this file to `.env` for local development with Docker Compose.

# Application identity
APP_NAME=finance-management
APP_SUBDOMAIN=finance
BASE_DOMAIN=localhost

# Runtime networking
WEB_PORT=3000
API_PORT=5000
NODE_ENV=development
CORS_ALLOWED_ORIGINS=http://finance-management-web:3000,http://localhost:3000

# Backend configuration
MONGO_USERNAME=finance_app
MONGO_PASSWORD=finance_app_password
MONGO_DATABASE=finance
# Local database (use with `--profile localdb`)
MONGO_URI=mongodb://finance_app:finance_app_password@finance-management-db:27017/finance?authSource=admin
# External database example (uncomment to use)
# MONGO_URI=mongodb+srv://username:password@cluster0.example.mongodb.net/finance
ACCESS_TOKEN_SECRET=replace-with-strong-secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=replace-with-strong-refresh-secret
REFRESH_TOKEN_EXPIRY=7d
OTP_EXPIRY_MINUTES=10
ADMIN_RECENT_LOGIN_LIMIT=5
DEFAULT_PASSWORD_RESET_REDIRECT=http://localhost:3000/reset-password
SUBSCRIPTION_JOB_LOCK_TTL_MS=900000
JOB_INSTANCE_ID=finance-management-worker-1

# Image uploads
UPLOADS_ROOT=/app/uploads
UPLOAD_MAX_BYTES=5242880
UPLOAD_MAX_DIMENSION=1600
PROFILE_IMAGE_MAX_DIMENSION=512

# Front-end configuration
AUTH_BACKEND_URL=http://finance-management-api:5000
NEXTAUTH_URL=http://finance-management-web:3000
NEXTAUTH_SECRET=replace-with-long-random-secret
NEXT_PUBLIC_PASSWORD_RESET_REDIRECT_URL=http://localhost:3000/reset-password
AUTH_REFRESH_PATH=/api/users/refresh-token
AUTH_REDIS_PREFIX=auth:v1
AUTH_KEY_SALT=replace-with-random-salt
PROXY_TIMEOUT_MS=15000
PASSWORD_RESET_TIMEOUT_MS=15000
REGISTER_TIMEOUT_MS=15000
REDIS_URL=redis://finance-management-redis:6379
REDIS_CONNECT_TIMEOUT_MS=10000

# Email delivery settings
EMAIL_PROVIDER=smtp
EMAIL_SERVICE=
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=replace-with-email-password
EMAIL_API_KEY=
EMAIL_API_USER=
EMAIL_FROM="Finance Management" <no-reply@localhost>
EMAIL_SECURE=false
EMAIL_REQUIRE_TLS=true
EMAIL_TLS_REJECT_UNAUTHORIZED=true
EMAIL_TLS_MIN_VERSION=TLSv1.2
EMAIL_TLS_CIPHERS=

# Central reverse proxy metadata
BASE_URL=http://localhost:3000
