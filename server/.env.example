# Server configuration
PORT=5000
NODE_ENV=development
REDIS_URL=redis://finance-management-redis:6379
PDF_QUEUE_REDIS_URL=redis://finance-management-redis:6379
PDF_QUEUE_NAME=summary-pdf
PDF_JOB_RESPONSE_TIMEOUT_MS=45000
PDF_JOB_PROCESS_TIMEOUT_MS=120000

# Database
MONGO_URI=mongodb://localhost:27017/finance-management

# Authentication
ACCESS_TOKEN_SECRET=your_access_token_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Email (used for OTP/password reset flows)
# Provider can be `smtp` or an API-based provider such as `sendgrid`.
EMAIL_PROVIDER=smtp
# SMTP configuration (required when EMAIL_PROVIDER=smtp)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_REQUIRE_TLS=true
# TLS fine-tuning (optional)
EMAIL_TLS_REJECT_UNAUTHORIZED=true
EMAIL_TLS_MIN_VERSION=TLSv1.2
EMAIL_TLS_CIPHERS=
# Credentials / sender identity
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM="Finance App <no-reply@example.com>"
# API provider settings (used when EMAIL_PROVIDER is not `smtp`)
EMAIL_API_KEY=
EMAIL_API_USER=
EMAIL_SERVICE=

# OTP and admin limits
OTP_EXPIRY_MINUTES=10
ADMIN_RECENT_LOGIN_LIMIT=5
DEFAULT_PASSWORD_RESET_REDIRECT=https://your-app.com/reset-password

# Scheduled jobs
# Lock TTL (ms) controlling how long the subscription expiry job holds the DB lock.
SUBSCRIPTION_JOB_LOCK_TTL_MS=900000
# Optional identifiers for distinguishing job runners. Leave blank to use HOSTNAME and PID.
JOB_INSTANCE_ID=
HOSTNAME=

# Image uploads
# Root directory where processed uploads are stored (use an absolute path in production).
UPLOADS_ROOT=./uploads
# Maximum upload size in bytes (default 5 MB).
UPLOAD_MAX_BYTES=5242880
# Maximum dimensions (px) for transaction attachments and profile photos.
UPLOAD_MAX_DIMENSION=1600
PROFILE_IMAGE_MAX_DIMENSION=512

# CORS
# Comma-separated list of allowed origins. Example: https://app.example.com,https://admin.example.com
# Falls back to http://localhost:3000 when not provided.
CORS_ALLOWED_ORIGINS=http://localhost:3000
